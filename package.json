{
  "name": "eco-rewards-hub",
  "version": "1.2.1",
  "description": "Eco Rewards Hub",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecorewards/eco-rewards-hub.git"
  },
  "scripts": {
    "preversion": "git checkout master && git pull && npm test",
    "version": "npm run prepublishOnly",
    "postversion": " git push && git push --tags",
    "test": "npm run lint && mocha --require ts-node/register **/*.spec.ts",
    "prepublishOnly": "rm -rf ./dist/ && tsc --skipLibCheck -p ./ --outDir dist/",
    "generate-barrels": "barrelsby --delete -d src/ -e .spec.ts -e cli.ts",
    "lint-raw": "rm -rf node_modules/swagger2-koa/src/*.spec.ts; rm -rf node_modules/swagger2/src/*.spec.ts; rm -rf node_modules/ts-dedent/src/__tests__/*.spec.ts; tslint --project tsconfig.json",
    "lint": "npm run lint-raw -- -t stylish",
    "coverage": "nyc --reporter=text npm test",
    "report-coverage": "npm run coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "start": "NODE_OPTIONS=$NODE_DEBUG_OPTION ts-node src/start.ts",
    "bdd": "cucumber-js",
    "bdd-wip": "npm run bdd-setup && cucumber-js --tags '@wip'",
    "bdd-setup": "mysql -h 127.0.0.1 -u root -e 'drop database if exists ecorewards; create database ecorewards' && npm run migrate && npm run add-test-user && npm run add-test-user2",
    "add-test-user": "npm run cli -- create-user Test test@test.com password admin",
    "add-test-user2": "npm run cli -- create-user Test test2@test.com password admin",
    "cli": "NODE_OPTIONS=$NODE_DEBUG_OPTION ts-node src/cli.ts",
    "migrate": "mysql -h 127.0.0.1 -u root -e 'CREATE DATABASE IF NOT EXISTS ecorewards'; db-migrate --config config/database.json up",
    "migrate-down": "db-migrate --config config/database.json down",
    "create-migration": "db-migrate --sql-file --config config/database.json create"
  },
  "keywords": [
    "Public",
    "Transport"
  ],
  "author": "Linus Norton <linusnorton@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/atob": "^2.1.2",
    "@types/basic-auth": "^1.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/btoa": "^1.2.3",
    "@types/busboy": "^1.5.0",
    "@types/chai": "^4.3.4",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-router": "^7.4.4",
    "@types/mocha": "^10.0.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.11.18",
    "@types/sharp": "^0.31.1",
    "axios": "^1.2.2",
    "barrelsby": "^2.5.1",
    "btoa": "^1.2.1",
    "chai": "^4.3.7",
    "codecov": "^3.8.3",
    "js-base64": "^3.7.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@js-joda/core": "^5.5.2",
    "@koa/cors": "^4.0.0",
    "autobind-decorator": "^2.4.0",
    "aws-sdk": "^2.1291.0",
    "basic-auth": "^2.0.1",
    "bcrypt": "^5.1.0",
    "busboy": "^1.6.0",
    "csv-parse": "^5.3.3",
    "db-migrate": "^0.11.13",
    "db-migrate-mysql": "^2.2.0",
    "dotenv": "^16.0.3",
    "form-data": "^4.0.0",
    "formidable": "^2.1.1",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-router": "^12.0.0",
    "luhn-generator": "^0.6.0",
    "memoized-class-decorator": "^1.6.1",
    "memoizee": "^0.4.15",
    "mysql2": "^3.2.0",
    "mysqldump": "^3.2.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "sharp": "^0.31.3",
    "swagger2": "^2.0.0",
    "swagger2-koa": "^4.0.0",
    "ts-array-utils": "^0.5.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/*.ts",
      "src/**/*.spec.ts",
      "src/service/ServiceContainer.ts",
      "src/journey/controller/MultiPartFormReader.ts",
      "src/cli/CliContainer.ts",
      "bdd/**/*.ts"
    ]
  }
}
