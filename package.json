{
  "name": "eco-rewards-hub",
  "version": "1.1.5",
  "description": "Eco Rewards Hub",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecorewards/eco-rewards-hub.git"
  },
  "scripts": {
    "preversion": "git checkout master && git pull && npm test",
    "version": "npm run prepublishOnly",
    "postversion": " git push && git push --tags",
    "test": "npm run lint && mocha --require ts-node/register **/*.spec.ts",
    "prepublishOnly": "rm -rf ./dist/ && tsc -p ./ --outDir dist/",
    "generate-barrels": "barrelsby --delete -d src/ -e .spec.ts -e cli.ts",
    "lint-raw": "rm -rf node_modules/swagger2-koa/src/*.spec.ts; rm -rf node_modules/swagger2/src/*.spec.ts; tslint --project tsconfig.json",
    "lint": "npm run lint-raw -- -t stylish",
    "coverage": "nyc --reporter=text npm test",
    "report-coverage": "npm run coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "start": "NODE_OPTIONS=$NODE_DEBUG_OPTION ts-node src/start.ts",
    "bdd": "cucumber-js",
    "bdd-wip": "npm run bdd-setup && cucumber-js --tags '@wip'",
    "bdd-setup": "mysql -u root -e 'drop database if exists ecorewards; create database ecorewards' && npm run migrate && npm run add-test-user",
    "add-test-user": "npm run cli -- create-user Test test@test.com password admin",
    "cli": "NODE_OPTIONS=$NODE_DEBUG_OPTION ts-node src/cli.ts",
    "migrate": "mysql -u root -e 'CREATE DATABASE IF NOT EXISTS ecorewards'; db-migrate --config config/database.json up",
    "migrate-down": "db-migrate --config config/database.json down",
    "create-migration": "db-migrate --sql-file --config config/database.json create"
  },
  "keywords": [
    "Public",
    "Transport"
  ],
  "author": "Linus Norton <linusnorton@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/basic-auth": "^1.1.2",
    "@types/bcrypt": "^3.0.0",
    "@types/busboy": "^0.2.3",
    "@types/chai": "^4.2.7",
    "@types/csv-parse": "^1.2.2",
    "@types/cucumber": "^6.0.0",
    "@types/js-base64": "^2.3.1",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-router": "^7.0.42",
    "@types/mocha": "^5.2.7",
    "@types/mysql": "^2.15.7",
    "@types/node": "^12.12.22",
    "@types/pino": "^5.15.1",
    "axios": "^0.19.0",
    "barrelsby": "^2.2.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "js-base64": "^2.5.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "autobind-decorator": "^2.4.0",
    "basic-auth": "^2.0.1",
    "bcrypt": "^3.0.7",
    "busboy": "^0.3.1",
    "csv-parse": "^4.8.3",
    "db-migrate": "^0.11.6",
    "db-migrate-mysql": "^1.1.10",
    "form-data": "^3.0.0",
    "formidable": "^1.2.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "luhn-generator": "^0.5.1",
    "memoized-class-decorator": "^1.6.1",
    "mysql2": "^2.1.0",
    "pino": "^5.15.0",
    "pino-pretty": "^3.5.0",
    "swagger2": "^2.0.0",
    "swagger2-koa": "^2.0.0",
    "ts-array-utils": "^0.5.0"
  },
  "nyc": {
    "extends": "@istanbul/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/*.ts",
      "src/**/*.spec.ts",
      "src/service/ServiceContainer.ts",
      "src/journey/controller/MultiPartFileExtractor.ts",
      "src/cli/CliContainer.ts",
      "bdd/**/*.ts"
    ]
  }
}
